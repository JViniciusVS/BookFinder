    <%- include("partials/header") %>
    <div class="container">
            <div class="row g-0 mt-2">
                <% books.forEach((book) => { %>
                    <div class="card m-3">
                        <a href="/books/<%= book._id %>"><img class="card-img card-img-top" src="<%= book.image %>" alt="picture of the book"></a>
                        <h3 class="card-title mt-3"><%= book.title %></h3>
                        <p class="card-text mb-3 mx-3"><%= book.description %></p>
                    </div> 
                <% }) %>
            </div>
        </div>
    <%- include("partials/footer") %>